### --- Variables --- ###
set $mod Mod4
hide_edge_borders both
gaps inner 10
gaps outer 10

# Font for window titles
font pango: Tamsyn, FontAwesome 10


### --- scratchpad(s) --- ###
# $mod + t, terminal for everything
exec --no-startup-id urxvtc -name dropdown
for_window [instance="dropdown"] move scratchpad

# $mod+a, tmux
exec --no-startup-id urxvtc -name dropdown -e tmux
for_window [instance="tmux"] move scratchpad


### --- Basic Keybinds --- ###
floating_modifier $mod

bindsym $mod+Return exec urxvtc
bindsym $mod+a [instance="tmux"] scratchpad show; move position center
bindsym $mod+t [instance="dropdown"] scratchpad show; move position center
#bindsym $mod+Return exec  st
bindsym Ctrl+Mod1+e exec urxvtc -e vim $HOME/.config/i3/config

bindsym $mod+q kill

bindsym $mod+l exec i3lock-fancy -p

bindsym $mod+r mode "resize"
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+v split v
bindsym $mod+b split h

bindsym $mod+f fullscreen

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+s sticky toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle


bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Shift+e exec /home/zawaken/.config/i3/scripts/exit_menu

### --- Workspaces --- ###
assign [class="Nightly"] $workspace1
assign [class="Steam"] $workspace5
assign [class="discord"] $workspace2
for_window [class="Spotify"] move to workspace $workspace10

for_window [class="Pavucontrol"] floating enable
for_window [class="mpv"] floating enable
for_window [class="sxiv"] floating enable

set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
